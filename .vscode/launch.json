{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "UI - Launch",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}/slamis-ui"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "API - Launch",
            "args": [
                "${workspaceFolder}/slamis-api/src/main.ts"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register",
                "-r",
                "tsconfig-paths/register"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}/slamis-api",
            "console": "integratedTerminal",
            "protocol": "inspector"
        }
    ]
}